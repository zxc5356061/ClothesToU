                描述 : <input type="text" name="description" class="form-control" value="@ViewBag.C_Description">
                <input type="submit" value="查詢" class=" btn btn-primary" style="background-color: orange;color:black; border-style: hidden; font-weight: bold;" />
            </div>
        </div>
    </div>
</form>
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
