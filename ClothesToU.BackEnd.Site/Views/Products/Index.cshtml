@model IEnumerable<ClothesToU.BackEnd.Site.Models.ViewModels.ProdIndexVM>

@{
    ViewBag.Title = "Index";
}

<h1>後台商品維護專區</h1>

<br />


<form class="form-inline" action="" method="get">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
